---
const { frontmatter } = Astro.props;
import Analytics from "@vercel/analytics/astro";
---


<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{frontmatter.title}</title>
        <meta name="description" content=`Writing practice from ${new Date(frontmatter.date).toLocaleString()}` />
        <meta name="theme-color" content="#FF6200" />
        <meta name="author" content="VINXIS" />
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/bitmaks/cm-web-fonts@latest/fonts.css">
        <link
            rel="alternate"
            type="application/rss+xml"
            title="VINXIS"
            href={new URL("rss.xml", Astro.site)}
        />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="VINXIS - Blog"
            href={new URL("rss_blog.xml", Astro.site)}
        />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="VINXIS - Notes"
            href={new URL("rss_notes.xml", Astro.site)}
        />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="VINXIS - Posts"
            href={new URL("rss_posts.xml", Astro.site)}
        />
        <Analytics />
    </head>
    <body>
        <main>
            <a href="/practice" class="back-button">‚Üê Back to Practice Sessions</a>
            <h1>{frontmatter.title}</h1>
            <small>{new Date(frontmatter.date).toLocaleString()}</small>
            <slot />
        </main>
    </body>
</html>


<style>
    body {
        background: #cccccc;
        color: #222222;
        margin: 40px;
        line-height: 1.5;
    }
    
    .back-button {
        display: inline-block;
        text-decoration: none;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid transparent;
        transition: all 0.2s ease;
    }
    
    .back-button:hover {
        color: #222;
        border-bottom-color: #222;
    }
</style>