---
interface Props {
  postID?: string;
  showForm?: boolean;
}

let { postID, showForm = true } = Astro.props;

// Determine postID from URL if not provided as prop
if (!postID) {
    postID = Astro.url.pathname.replace(/(\/$|^\/)/, "");

    if (
        postID !== "me" &&
        postID !== "comments" &&
        postID.split("/").length < 2 &&
        ["blog", "posts"].includes(postID.split("/")[0]!)
    )
        throw new Error("Invalid post ID");

    if (postID === "comments/" || postID === "comments")
        postID = "";
}

// The client-side script handles fetching and displaying comments
---

<div class="comments-container" data-post-id={postID}>
    <h2>Comments</h2>
    <div class="comments-controls">
        <div class="view-toggle" id="comments-view-toggle" role="group" aria-label="Comments view mode">
            <button type="button" class="view-toggle-button is-active" data-mode="threaded" aria-pressed="true">Threaded</button>
            <button type="button" class="view-toggle-button" data-mode="flat" aria-pressed="false">Timeline</button>
        </div>
    </div>
    <div class="comments-list" id="comments-list">
    <!-- Comments will be loaded here -->
    <div class="loading">Loading comments...</div>
    </div>
    <div class="comments-pagination" id="comments-pagination" aria-live="polite"></div>

    {showForm && (
        <div class="comment-form-container">
            <h3>Leave a comment</h3>
            <form id="comment-form" class="comment-form">
                <div class="form-group">
                    <label for="username">Name (optional)</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="Anonymous"
                        maxlength="50"
                    />
                </div>

                <div class="form-group">
                    <label for="website">Website (optional)</label>
                    <input
                        type="url"
                        id="website"
                        name="website"
                        placeholder="https://example.com"
                    />
                </div>

                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea id="comment" name="comment" required maxlength="4000" rows="4"
                    ></textarea>
                </div>

                <input type="hidden" id="replyID" name="replyID" value="" />
                <input type="hidden" id="postID" name="postID" value={postID} />

                <div class="form-group owner-section" style="display: none;">
                    <label for="password">Owner Password (if owner)</label>
                    <input type="password" id="password" name="password" />
                </div>

                <div class="form-buttons">
                    <button type="submit">Post Comment</button>
                </div>
            </form>

            <div id="reply-to-container" style="display: none;">
                <p>Replying to: <span id="reply-to-name"></span></p>
                <p id="reply-content"></p>
                <button type="button" id="cancel-reply">Cancel Reply</button>
            </div>
        </div>
    )}
</div>

<script>
document.addEventListener("astro:page-load", () => {
    interface Comment {
        ID: number;
        postID: string;
        timestamp: string;
        username: string | null;
        website: string | null;
        comment: string;
        isOwner: boolean | number;
        replyID: number | null;
        replies?: Comment[];
    }

    interface PaginationMeta {
        total: number;
        page: number;
        pageSize: number;
        totalPages: number;
    }

    interface CommentsResponse {
        comments: Comment[];
        pagination?: PaginationMeta;
        mode?: "threaded" | "flat";
        effectivePostID?: string | null;
    }

    type CommentMode = "threaded" | "flat";
    
    const COMMENTS_ENDPOINT = "https://vinxis-comments.oykxf2.workers.dev";
    const MODE_STORAGE_KEY = "vinxis-comments-view-mode";

    // Helper functions
    const locale = navigator.language || "en-US";
    const timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;
    const formatDate = (dateString: string) => {
        let date = new Date(dateString);
        if (Number.isNaN(date.getTime()))
            return dateString;
        date = new Date(Date.UTC(
            date.getFullYear(),
            date.getMonth(),
            date.getDate(),
            date.getHours(),
            date.getMinutes(),
            date.getSeconds()
        ));
        return date.toLocaleString(locale, {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            hour: "2-digit",
            minute: "2-digit",
            timeZone,
        });
    };

    const escapeHtml = (text: string) => {
        const element = document.createElement("div");
        element.textContent = text;
        return element.innerHTML;
    };

    // Function to convert URLs in text to clickable links
    const linkifyText = (text: string) => {
        // First escape the HTML to prevent XSS
        const escapedText = escapeHtml(text);
        
        // URL regex pattern
        const urlPattern = /https?:\/\/(www\.)?[-a-zA-Z0-9@:%._+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_+.~#?&//=]*)/gi;
        
        // Replace URLs with anchor tags
        return escapedText.replace(urlPattern, (url) => `<a href="${url}" target="_blank" rel="noopener noreferrer">${url}</a>`);
    };

    const buildPostHref = (slug: string | null) => {
        const trimmed = slug?.trim();
        if (!trimmed)
            return null;
        const normalized = trimmed.replace(/^\/+/, "");
        return `/${encodeURI(normalized)}`;
    };

    const commentsContainer = document.querySelector(".comments-container") as HTMLElement | null;
    if (!commentsContainer)
        throw new Error("Comments container not found");

    const postID = commentsContainer.getAttribute("data-post-id") || "";
    const commentsList = document.getElementById("comments-list") as HTMLElement | null;
    if (!commentsList)
        throw new Error("Comments list not found");

    const commentForm = document.getElementById("comment-form") as HTMLFormElement | null;
    const usernameInput = document.getElementById("username") as HTMLInputElement | null;
    const websiteInput = document.getElementById("website") as HTMLInputElement | null;
    const replyToContainer = document.getElementById("reply-to-container") as HTMLElement | null;
    const replyToName = document.getElementById("reply-to-name") as HTMLElement | null;
    const replyContent = document.getElementById("reply-content") as HTMLElement | null;
    const replyIDInput = document.getElementById("replyID") as HTMLInputElement | null;
    const ownerSection = document.querySelector(".owner-section") as HTMLElement | null;
    const cancelReplyBtn = document.getElementById("cancel-reply") as HTMLButtonElement | null;
    const paginationContainer = document.getElementById("comments-pagination") as HTMLElement | null;
    const viewToggle = document.getElementById("comments-view-toggle") as HTMLElement | null;

    const trimmedPostID = postID.trim();
    const hasPostFilter = trimmedPostID.length > 0;

    let currentPage = 1;
    let totalPages = 1;
    let isLoading = false;
    let hasPaginationInfo = false;
    let pendingHighlightId: number | null = null;
    const storedMode = typeof localStorage !== "undefined" ? localStorage.getItem(MODE_STORAGE_KEY) : null;
    let currentMode: CommentMode = storedMode === "flat" ? "flat" : "threaded";

    const clamp = (value: number, min: number, max: number) => Math.min(Math.max(value, min), max);
    const COMMENT_HASH_REGEX = /^#comment-(\d+)$/i;

    const getCommentIdFromHash = () => {
        const match = window.location.hash.match(COMMENT_HASH_REGEX);
        if (!match)
            return null;
        const parsed = Number(match[1]);
        return Number.isFinite(parsed) ? parsed : null;
    };

    const updateHashForComment = (commentId: number) => {
        if (!Number.isFinite(commentId))
            return;
        const targetHash = `#comment-${commentId}`;
        if (window.location.hash === targetHash)
            return;
        history.replaceState(null, "", targetHash);
    };

    // Builds the comments API URL
    const buildCommentsUrl = (pageNumber: number, options: { commentID?: number | null } = {}) => {
        const params = new URLSearchParams();
        if (hasPostFilter)
            params.set("postID", trimmedPostID);
        params.set("mode", currentMode);
        if (options.commentID && Number.isFinite(options.commentID))
            params.set("commentID", String(options.commentID));
        else
            params.set("page", Math.max(1, Math.floor(pageNumber)).toString());
        return `${COMMENTS_ENDPOINT}?${params.toString()}`;
    };

    // Highlights a comment by ID
    const highlightComment = (commentId: number, scroll = false) => {
        const element = document.getElementById(`comment-${commentId}`);
        if (!element)
            return;
        element.classList.add("comment-highlight");
        if (scroll)
            element.scrollIntoView({ behavior: "smooth", block: "center" });
        window.setTimeout(() => element.classList.remove("comment-highlight"), 2400);
    };

    const focusIfPresent = (commentId: number) => {
        if (!Number.isFinite(commentId))
            return false;
        const element = document.getElementById(`comment-${commentId}`);
        if (!element)
            return false;
        highlightComment(commentId, true);
        pendingHighlightId = null;
        return true;
    };

    const ensureCommentVisible = async (commentId: number) => {
        if (!Number.isFinite(commentId))
            return;
        if (focusIfPresent(commentId))
            return;
        pendingHighlightId = commentId;
        await loadComments(1, { commentID: commentId, skipGuard: true, disableAutoStep: true });
    };

    const handleHashNavigation = () => {
        const hashCommentId = getCommentIdFromHash();
        if (hashCommentId === null)
            return;
        ensureCommentVisible(hashCommentId).catch((error) => console.error("Failed to navigate to comment", error));
    };

    // Updates the view when toggling between modes
    const updateViewToggle = () => {
        if (!viewToggle)
            return;
        viewToggle.querySelectorAll<HTMLButtonElement>("button").forEach((button) => {
            const mode = button.getAttribute("data-mode");
            const isActive = mode === currentMode;
            button.classList.toggle("is-active", isActive);
            button.setAttribute("aria-pressed", isActive ? "true" : "false");
            button.disabled = isLoading;
        });
    };

    // Renders the threaded view for comments
    const renderThreadedList = (items: Comment[]) => {
        commentsList.classList.remove("timeline-view");
        let html = "";
        items.forEach((comment) => {
            html += renderComment(comment, Boolean(comment.replyID));
            if (comment.replies && comment.replies.length > 0) {
                html += "<div class=\"replies\">";
                comment.replies.forEach((reply) => {
                    html += renderComment(reply, true);
                });
                html += "</div>";
            }
        });
        commentsList.innerHTML = html;
    };

    // Renders the timeline view for comments
    const renderFlatList = (items: Comment[]) => {
        commentsList.classList.add("timeline-view");
        commentsList.innerHTML = items.map((comment) => renderComment(comment, Boolean(comment.replyID))).join("");
    };

    // Handle reply button click
    const handleReplyClick = (event: Event) => {
        if (
            !replyIDInput ||
            !replyToContainer ||
            !replyToName ||
            !replyContent ||
            !commentForm
        )
            return;

        const target = event.currentTarget as HTMLButtonElement;
        const commentId = target.getAttribute("data-id");
        const commentName = target.getAttribute("data-name");
        if (!commentId || !commentName)
            return;

        replyIDInput.value = commentId;
        replyToName.textContent = commentName;
        replyContent.textContent = target.closest(".comment")?.querySelector(".comment-body")?.textContent || "";
        replyToContainer.style.display = "block";

        // Scroll to comment form
        commentForm.scrollIntoView({ behavior: "smooth" });
        document.getElementById("comment")?.focus();
    };

    commentsList?.addEventListener("click", (event) => {
        const link = (event.target as HTMLElement).closest<HTMLAnchorElement>(".comment-link, .comment-parent-link");
        if (!link)
            return;
        const hashValue = link.hash || link.getAttribute("href") || "";
        const match = hashValue.match(COMMENT_HASH_REGEX);
        if (!match)
            return;
        const commentId = Number(match[1]);
        if (!Number.isFinite(commentId))
            return;
        const targetHash = `#comment-${commentId}`;
        if (window.location.hash === targetHash) {
            event.preventDefault();
            ensureCommentVisible(commentId).catch((error) => console.error("Failed to focus comment", error));
        }
    });

    // Renders the pagination controls (or hides them if not needed)
    const renderPaginationControls = () => {
        if (!paginationContainer)
            return;

        if (!hasPaginationInfo) {
            paginationContainer.innerHTML = "";
            paginationContainer.style.display = "none";
            return;
        }

        if (totalPages <= 1 && !isLoading) {
            paginationContainer.innerHTML = "";
            paginationContainer.style.display = "none";
            return;
        }

        paginationContainer.style.display = "flex";
        const infoText = isLoading ? "Loading..." : `Page ${currentPage} of ${totalPages}`;
        const disablePrev = isLoading || currentPage <= 1;
        const disableNext = isLoading || currentPage >= totalPages;
        const disableJump = isLoading;
        const clampedPage = clamp(currentPage, 1, Math.max(totalPages, 1));

        paginationContainer.innerHTML = `
            <button type="button" class="pagination-button" data-action="first" ${disablePrev ? "disabled" : ""}>First</button>
            <button type="button" class="pagination-button" data-action="prev" ${disablePrev ? "disabled" : ""}>Previous</button>
            <span class="pagination-info">${infoText}</span>
            <label class="pagination-jump">
                <span class="sr-only">Jump to page</span>
                <input type="number" min="1" max="${Math.max(totalPages, 1)}" value="${clampedPage}" class="pagination-input" ${disableJump ? "disabled" : ""} />
            </label>
            <button type="button" class="pagination-button pagination-go" data-action="jump" ${disableJump ? "disabled" : ""}>Go</button>
            <button type="button" class="pagination-button" data-action="next" ${disableNext ? "disabled" : ""}>Next</button>
            <button type="button" class="pagination-button" data-action="last" ${disableNext ? "disabled" : ""}>Last</button>
        `;
    };

    const loadComments = async (
        pageNumber = 1,
        options: { skipGuard?: boolean; disableAutoStep?: boolean; commentID?: number } = {}
    ) => {
        if (isLoading && !options.skipGuard)
            return;

        const targetingComment = typeof options.commentID === "number" && Number.isFinite(options.commentID);
        const targetPage = Math.max(1, Math.floor(pageNumber));
        if (!targetingComment)
            currentPage = targetPage;
        isLoading = true;
        renderPaginationControls();
        updateViewToggle();

        commentsList.innerHTML = "<div class=\"loading\">Loading comments...</div>";

        try {
            const response = await fetch(buildCommentsUrl(targetPage, targetingComment ? { commentID: options.commentID ?? null } : undefined));
            if (response.status === 404 && targetingComment) {
                commentsList.innerHTML = `<div class="error">Comment not found. It's probably for a different page? Check <a href="/comments#comment-${options.commentID}">the comments page</a>.</div>`;
                totalPages = 1;
                hasPaginationInfo = false;
                pendingHighlightId = null;
                return;
            }
            if (!response.ok)
                throw new Error(`Failed to load comments (${response.status})`);
            const data = await response.json() as CommentsResponse;

            if (data.mode === "flat" || data.mode === "threaded")
                currentMode = data.mode;

            currentPage = data.pagination?.page ?? (targetingComment ? currentPage : targetPage);
            totalPages = Math.max(1, data.pagination?.totalPages ?? 1);
            hasPaginationInfo = true;

            const commentsPayload = data.comments ?? [];
            if (commentsPayload.length === 0) {
                const canAutoStep = currentPage > 1 && !targetingComment && !options.disableAutoStep;
                if (canAutoStep)
                    return await loadComments(currentPage - 1, { skipGuard: true, disableAutoStep: true });
                commentsList.innerHTML = targetingComment
                    ? `<div class="error">Comment not found. It's probably for a different page? Check <a href="/comments#comment-${options.commentID}">the comments page</a>.</div>`
                    : "<div class=\"no-comments\">No comments yet. Be the first to comment!</div>";
                if (targetingComment)
                    pendingHighlightId = null;
                return;
            }

            if (currentMode === "flat")
                renderFlatList(commentsPayload);
            else
                renderThreadedList(commentsPayload);

            if (postID)
                document.querySelectorAll(".reply-button").forEach((button) => button.addEventListener("click", handleReplyClick));

            if (pendingHighlightId) {
                highlightComment(pendingHighlightId, true);
                pendingHighlightId = null;
            }
        } catch (error) {
            console.error("Error loading comments:", error);
            commentsList.innerHTML = "<div class=\"error\">Failed to load comments. Please try again later.</div>";
            totalPages = 1;
            hasPaginationInfo = true;
        } finally {
            isLoading = false;
            renderPaginationControls();
            updateViewToggle();
        }
    };

    paginationContainer?.addEventListener("click", (event) => {
        const button = (event.target as HTMLElement).closest<HTMLButtonElement>("button");
        if (!button || button.disabled)
            return;

        const action = button.getAttribute("data-action");
        if (action === "first")
            loadComments(1).catch((error) => console.error("Pagination load failed", error));
        else if (action === "prev" && currentPage > 1)
            loadComments(currentPage - 1).catch((error) => console.error("Pagination load failed", error));
        else if (action === "next" && currentPage < totalPages)
            loadComments(currentPage + 1).catch((error) => console.error("Pagination load failed", error));
        else if (action === "last")
            loadComments(totalPages).catch((error) => console.error("Pagination load failed", error));
        else if (action === "jump") {
            const input = paginationContainer.querySelector<HTMLInputElement>(".pagination-input");
            if (!input)
                return;
            const desiredPage = Number.parseInt(input.value, 10);
            if (Number.isFinite(desiredPage)) {
                const targetPage = clamp(desiredPage, 1, Math.max(totalPages, 1));
                loadComments(targetPage).catch((error) => console.error("Pagination load failed", error));
            }
        }
    });

    paginationContainer?.addEventListener("keydown", (event) => {
        if (event.key !== "Enter")
            return;
        const target = event.target as HTMLElement;
        if (!target.classList.contains("pagination-input"))
            return;
        event.preventDefault();
        const desiredPage = Number.parseInt((target as HTMLInputElement).value, 10);
        if (Number.isFinite(desiredPage)) {
            const targetPage = clamp(desiredPage, 1, Math.max(totalPages, 1));
            loadComments(targetPage).catch((error) => console.error("Pagination load failed", error));
        }
    });

    viewToggle?.addEventListener("click", (event) => {
        const button = (event.target as HTMLElement).closest<HTMLButtonElement>("button");
        if (!button || button.disabled)
            return;
        const mode = button.getAttribute("data-mode");
        if (mode === currentMode)
            return;
        if (mode === "threaded" || mode === "flat") {
            currentMode = mode;
            if (typeof localStorage !== "undefined")
                localStorage.setItem(MODE_STORAGE_KEY, currentMode);
            updateViewToggle();
            loadComments(1, { skipGuard: true }).catch((error) => console.error("Failed to switch comment mode", error));
        }
    });

    // Render a single comment
    const renderComment = (comment: Comment, isReply = false) => {
        const username = comment.username ?? "Anonymous";
        const isOwner = Boolean(comment.isOwner);
        const ownerTag = isOwner
            ? "<span class=\"comment-owner\">[OWNER]</span>"
            : "";
        const commentLink = `<a class="comment-link" href="#comment-${comment.ID}" aria-label="Link to comment #${comment.ID}">#${comment.ID}</a>`;
        const websiteLink = comment.website
            ? `<a href="${escapeHtml(comment.website)}" target="_blank" rel="noopener noreferrer" class="comment-website">Website</a>`
            : "";
        const allowReply = Boolean(postID);
        const replyButton = isReply && allowReply
            ? ""
            : allowReply
                ? `<button class="reply-button" data-id="${comment.ID}" data-name="${escapeHtml(username)}">Reply</button>`
                : "";
        const postHref = !postID ? buildPostHref(comment.postID) : null;
        const postLink = !postID && postHref
            ? `<a class="comment-post-link" href="${postHref}">${escapeHtml(comment.postID)}</a>`
            : "";
        const replyLabel = comment.replyID && currentMode === "flat"
            ? "<span class=\"comment-reply-label\">Reply</span>"
            : "";
        const parentLink = comment.replyID
            ? `<a class="comment-parent-link" href="#comment-${comment.replyID}" aria-label="Jump to parent comment">&larr; #${comment.replyID}</a>`
            : "";
        const classList = ["comment"];
        if (isReply)
            classList.push("reply");

        return `
            <div class="${classList.join(" ")}" id="comment-${comment.ID}">
                <div class="comment-header">
                    ${commentLink}
                    <span class="comment-username">${escapeHtml(username)}</span>
                    ${ownerTag}
                    ${replyLabel}
                    ${parentLink}
                    ${websiteLink}
                    ${postLink}
                    <span class="comment-timestamp">${formatDate(comment.timestamp)}</span>
                </div>
                <div class="comment-body">${linkifyText(comment.comment)}</div>
                <div class="comment-actions">
                    ${replyButton}
                </div>
            </div>
        `;
    };

    // Initialize the UI and shit
    updateViewToggle();
    renderPaginationControls();

    // Load comments on page load
    const initialHashCommentId = getCommentIdFromHash();
    let initialLoad: Promise<void>;
    if (initialHashCommentId !== null) {
        pendingHighlightId = initialHashCommentId;
        initialLoad = loadComments(1, { commentID: initialHashCommentId, skipGuard: true, disableAutoStep: true });
    } else {
        initialLoad = loadComments();
    }
    initialLoad.catch((error) => {
        console.error("Error loading comments:", error);
        commentsList.innerHTML = "<div class=\"error\">Failed to load comments. Please try again later.</div>";
    });

    // When comments are clicked/posted, handle navigation to comment and hash
    window.addEventListener("hashchange", handleHashNavigation);

    if (
        commentForm &&
        usernameInput &&
        websiteInput &&
        replyToContainer &&
        replyToName &&
        replyContent &&
        replyIDInput &&
        ownerSection &&
        cancelReplyBtn
    ) {
        // Persisting username and website in localStorage so people don't need to readd them every time
        const STORAGE_KEY = "vinxis-comments-user";
        const persistUserIdentity = () => {
            if (typeof localStorage === "undefined")
                return;
            const userData = {
                username: usernameInput.value.trim(),
                website: websiteInput.value.trim(),
            };
            if (!userData.username && !userData.website) {
                localStorage.removeItem(STORAGE_KEY);
                return;
            }
            localStorage.setItem(STORAGE_KEY, JSON.stringify(userData));
        };
        const restoreUserIdentity = () => {
            if (typeof localStorage === "undefined")
                return;
            const raw = localStorage.getItem(STORAGE_KEY);
            if (!raw)
                return;
            try {
                const saved = JSON.parse(raw) as { username?: string; website?: string };
                if (saved.username)
                    usernameInput.value = saved.username;
                if (saved.website)
                    websiteInput.value = saved.website;
            } catch (error) {
                console.warn("Failed to parse saved comment user data", error);
                localStorage.removeItem(STORAGE_KEY);
            }
        };

        // Init, restore on load and then persist on input
        restoreUserIdentity();
        usernameInput.addEventListener("input", persistUserIdentity);
        websiteInput.addEventListener("input", persistUserIdentity);

        // Cancel reply
        cancelReplyBtn.addEventListener("click", () => {
            replyIDInput.value = "";
            replyToContainer.style.display = "none";
        });

        // If user types "vnxs", show owner section
        let pressedKeys = new Set<string>();
        document.addEventListener("keydown", (event) => {
            if (pressedKeys.has(event.key))
                return;
            if (event.key === "CapsLock")
                pressedKeys = new Set<string>();
            if (pressedKeys.has(event.key.toUpperCase()) || pressedKeys.has(event.key.toLowerCase())) {
                pressedKeys.delete(event.key.toUpperCase());
                pressedKeys.delete(event.key.toLowerCase());
            }
            pressedKeys.add(event.key);
            if (
                (pressedKeys.has("v") || pressedKeys.has("V")) &&
                (pressedKeys.has("n") || pressedKeys.has("N")) &&
                (pressedKeys.has("x") || pressedKeys.has("X")) &&
                (pressedKeys.has("s") || pressedKeys.has("S"))
            ) {
                ownerSection.style.display = "block";
                pressedKeys.clear();
            }
        });
        document.addEventListener("keyup", (event) => {
            pressedKeys.delete(event.key);
        });

        // Handle form submission
        commentForm.addEventListener("submit", async (event) => {
            event.preventDefault();

            const formData = new FormData(commentForm);
            const comment = formData.get("comment");

            if (!comment || comment.toString().trim() === "") {
                alert("Comment cannot be empty");
                return;
            }

            try {
                const submitBtn = commentForm.querySelector("button[type=\"submit\"]") as HTMLButtonElement | null;
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.textContent = "Posting...";
                }

                const payload = {
                    postID,
                    comment: comment.toString().trim(),
                    username: formData.get("username") || null,
                    website: formData.get("website") || null,
                    replyID: formData.get("replyID") || null,
                    password: formData.get("password") || null,
                };

                const response = await fetch(
                    COMMENTS_ENDPOINT,
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(payload),
                    }
                );

                const result = await response.json();
                persistUserIdentity();

                if (response.ok) {
                    const newCommentId = Number(result.commentID);
                    let highlightId: number | null = Number.isFinite(newCommentId) ? newCommentId : null;
                    if (!highlightId && result.comment) {
                        const rawId = Number((result.comment as Comment).ID);
                        if (Number.isFinite(rawId))
                            highlightId = rawId;
                    }
                    if (highlightId !== null) {
                        pendingHighlightId = highlightId;
                        updateHashForComment(highlightId);
                    }

                    // Reset form
                    commentForm.reset();
                    restoreUserIdentity();
                    replyIDInput.value = "";
                    replyToContainer.style.display = "none";
                    ownerSection.style.display = "none";

                    // Reload comments
                    await loadComments(1, { skipGuard: true });
                } else {
                    alert(`Error: ${result.error || "Failed to post comment"}`);
                }
            } catch (error) {
                console.error("Error posting comment:", error);
                alert("Failed to post comment. Please try again later.");
            } finally {
                const submitBtn = commentForm.querySelector("button[type=\"submit\"]") as HTMLButtonElement | null;
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = "Post Comment";
                }
            }
        });
    }
